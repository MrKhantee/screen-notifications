<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lukekorth.screennotifications"
    android:versionCode="6"
    android:versionName="0.51" >
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="16" />
    
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".ScreenNotificationsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".AppsActivity"></activity>
        
        <service android:name=".ScreenNotificationsService" android:enabled="@bool/is_not_jelly_bean">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>
        
        <service android:name=".ScreenNotificationsServiceJB" android:enabled="@bool/is_jelly_bean"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            
	        <meta-data
	           android:name="android.accessibilityservice"
	           android:resource="@xml/accessibilityservice" />
        </service>
    </application>

</manifest>